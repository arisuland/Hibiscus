{
  "name": "@monori/frontend",
  "version": "1.0.0",
  "private": true,
  "description": "ðŸ‘»ðŸ’» Frontend portion for Monori, made with React using TailwindCSS",
  "author": "Chris \"August\" Hernandez <august@augu.dev>",
  "license": "MIT",
  "repository": "https://github.com/monori-site/frontend",
  "scripts": {
    "build:css:watch": "yarn postcss src/styles/**/*.scss --dir src/styles/ --ext css --verbose --watch",
    "build:css": "yarn postcss src/styles/**/*.scss --dir src/styles/ --ext css --verbose && rm src/styles/**.css.map",
    "prepare": "rm -fr node_modules/@types/**/node_modules",
    "start": "yarn lint && yarn build:css && yarn react-scripts start",
    "build": "yarn lint && yarn build:css && yarn react-scripts build",
    "lint": "eslint src --ext .ts,.tsx --fix --ignore-path .gitignore",
    "e2e": "yarn concurrently \"yarn start\" \"cypress run\" --success first --kill-others"
  },
  "dependencies": {
    "@augu/orchid": "1.8.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-redux": "7.2.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.1",
    "redux": "4.0.5",
    "tailwindcss": "1.9.6"
  },
  "devDependencies": {
    "@augu/eslint-config": "1.8.3",
    "@csstools/postcss-sass": "4.0.0",
    "@types/node": "14.14.11",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-redux": "7.1.11",
    "@types/react-router-dom": "5.1.6",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "autoprefixer": "10.1.0",
    "concurrently": "5.3.0",
    "cypress": "6.1.0",
    "eslint": "7.15.0",
    "eslint-plugin-react": "7.21.5",
    "postcss": "8.2.0",
    "postcss-cli": "8.3.0",
    "postcss-import": "13.0.0",
    "typescript": "4.1.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
