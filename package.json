{
  "name": "@monori/frontend",
  "version": "1.0.0",
  "private": true,
  "description": "ðŸ‘»ðŸ’» Frontend portion for Monori, made with React using TailwindCSS",
  "author": "Chris \"August\" Hernandez <august@augu.dev>",
  "license": "MIT",
  "repository": "https://github.com/monori-site/frontend",
  "scripts": {
    "build:css:watch": "yarn postcss src/styles/**/*.scss --dir src/styles/ --ext css --verbose --watch",
    "build:css": "yarn postcss src/styles/**/*.scss --dir src/styles/ --ext css --verbose && rm src/styles/**.css.map",
    "prepare": "rm -fr node_modules/@types/**/node_modules",
    "start": "yarn lint && yarn build:css && yarn react-scripts start",
    "build": "yarn lint && yarn build:css && yarn react-scripts build",
    "lint": "eslint src --ext .ts,.tsx --fix --ignore-path .gitignore",
    "e2e": "yarn concurrently \"yarn start\" \"cypress run\" --success first --kill-others"
  },
  "dependencies": {
    "@augu/orchid": "1.6.1",
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-brands-svg-icons": "5.14.0",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "redux": "4.0.5",
    "tailwindcss": "1.8.4"
  },
  "devDependencies": {
    "@augu/eslint-config": "1.8.2",
    "@csstools/postcss-sass": "4.0.0",
    "@types/node": "14.6.4",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "5.1.5",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "autoprefixer": "9.8.6",
    "concurrently": "5.3.0",
    "cypress": "5.1.0",
    "eslint": "7.8.1",
    "eslint-plugin-react": "7.20.6",
    "postcss": "7.0.32",
    "postcss-cli": "7.1.2",
    "postcss-import": "12.0.1",
    "typescript": "3.9.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
